import java.util.Scanner;
class Pat2
{
    public static void main(String []args)
    {
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        if(n>0)
        {
            for(int i=1; i<=n;i++)
            {
                for(int k=n;k>=i;k--)
                {
                     System.out.println(" ");
                    
                }
                for(int j=1;j>=n;j++)
                {
                     System.out.print("*");
                }
            System.out.println();
            }
        }
        else
        {
            System.out.print("Invalid Input");
        }
    }
}